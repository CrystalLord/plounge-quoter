<assembly>
    <id>full-pack</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <files>
        <file>
            <source>target/${project.artifactId}.jar</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <outputDirectory>.</outputDirectory>
            <source>src/main/scripts/ploungequoter.sh</source>
            <fileMode>0744</fileMode>
            <lineEnding>keep</lineEnding>
        </file>
        <file>
            <source>examples/single_example.quote</source>
            <outputDirectory>.</outputDirectory>
        </file>
        <file>
            <source>examples/multi_example.quote</source>
            <outputDirectory>.</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <includes>
                <include>LICENSE*</include>
                <include>HELP*</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
    </fileSets>
</assembly>